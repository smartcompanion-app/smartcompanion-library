{
  "name": "@smartcompanion/ui",
  "version": "0.6.0",
  "author": "SmartCompanion Team <hello@smartcompanion.app> (https://smartcompanion.app) ",
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "es2015": "dist/esm/index.mjs",
  "es2017": "dist/esm/index.mjs",
  "types": "dist/types/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/smartcompanion-ui/smartcompanion-ui.esm.js",
  "files": [
    "src/",
    "dist/",
    "loader/"
  ],
  "license": "BSD-2-Clause",
  "scripts": {
    "build": "stencil build",
    "test": "npx playwright install --with-deps && npm run test-storybook:ci && npm run test:ci",
    "watch": "stencil build --watch",
    "storybook": "storybook dev -p 6006 --no-open",
    "build-storybook": "storybook build",
    "test:ci": "jest",
    "test-storybook:ci": "concurrently -k -s first -n \"SB,TEST\" -c \"magenta,blue\" \"storybook dev -p 6006 --no-open\" \"npx wait-on tcp:127.0.0.1:6006 && test-storybook\""
  },
  "jest": {
    "preset": "ts-jest",
    "testTimeout": 30000,
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testMatch": [
      "**/test/**/*.test.ts"
    ]
  },
  "dependencies": {
    "leaflet": "^1.9.4",
    "swiper": "^11.2.8"
  },
  "devDependencies": {
    "@ionic/core": "^8.7.2",
    "@jest/globals": "^29.7.0",
    "@smartcompanion/services": "*",
    "@stencil/core": "^4.36.2",
    "@stencil/sass": "^3.2.1",
    "@stencil/storybook-plugin": "^0.4.2",
    "@storybook/test-runner": "^0.23.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.8.0",
    "concurrently": "^9.2.1",
    "jest": "^29.7.0",
    "shadow-dom-testing-library": "^1.13.1",
    "storybook": "^9.1.8",
    "ts-jest": "^29.4.4",
    "wait-on": "^7.2.0"
  }
}
